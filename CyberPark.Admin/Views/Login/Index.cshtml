@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="padding-top: 20px; padding-bottom: 150px;">
    <div class="row">
        <div ng-controller="LoginController as vm" class="col-md-4 col-md-offset-4">
            <div class="panel panel-success">
                <div class="panel-heading">CyberPark Sign In</div>
                <div class="panel-body">
                    <!-- sign in form -->
                    <form name="form" ng-submit="vm.login()" role="form" method="post">
                        <div class="form-group">
                            <label>Your Mobile or Email</label>
                            <input type="text" name="phoneOrEmail" id="phoneOrEmail" class="form-control" ng-model="vm.phoneOrEmail" placeholder="Account Name" required>
                        </div>
                        <div class="form-group">
                            <label for="password">
                                Password
                                <a href="/forgotten-password" rel="nofollow">forgot password?</a>
                            </label>
                            <input type="password" name="password" id="password" class="form-control" ng-model="vm.password" required />
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn btn-success btn-lg btn-block">Sign In&nbsp;<span class="glyphicon glyphicon-refresh glyphicon-refresh-animate" ng-if="vm.submitting"></span></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>