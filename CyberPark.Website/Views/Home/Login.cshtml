@{
    var _returnUrl = (string) ViewBag.ReturnUrl;
}
<div class="container" style="padding-top: 20px; padding-bottom: 150px;">
    <div class="row" ng-controller="LoginController as vm">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-success">
                <div class="panel-heading">Sign In</div>
                <div class="panel-body">
                    <!-- messsage -->
                    <div ng-if="globalAlerts" ng-repeat="alert in globalAlerts">
                        <div ng-class="{'alert':true,'alert-success':alert.type==='success','alert-danger':alert.type==='error'}">
                            <span ng-bind="alert.message"></span>
                            <button type="button" class="close" data-dismiss="alert" ng-click="RemoveGlobalAlerts(alert)">&times;</button>
                        </div>
                    </div>
                    <!-- sign in form -->
                    <form name="form" ng-submit="vm.login('@_returnUrl')" role="form" method="post">
                        <div class="form-group">
                            <label>Your Mobile or Email</label>
                            <input type="text" name="phoneOrEmail" id="phoneOrEmail" class="form-control" ng-model="vm.phoneOrEmail" placeholder="Account Name" required>
                        </div>
                        <div class="form-group">
                            <label for="password">
                                Password
                                <a href="/forgotten-password" rel="nofollow">forgot password?</a>
                            </label>
                            <input type="password" name="password" id="password" class="form-control" ng-model="vm.password" required />
                        </div>
                        <div class="form-actions">
                            <div class="col-md-6">
                                <a href="/home/signup?ReturnUrl=@_returnUrl" class="btn btn-primary btn-lg btn-block">Sign Up</a>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-success btn-lg btn-block" ladda="vm.signinging" data-style="expand-right" >
                                   Sign In
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>